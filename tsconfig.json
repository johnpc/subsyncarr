{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "dist",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "incremental": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "build"]
}
